{
  "manifest_version": 2,
  "name": "Crossdart <-> Github Chrome Extension",
  "version": "0.0.1",

  "description": "Uses crossdart.json to add links to the source code",

  // Optional
  "author": "Anton Astashov",
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "permissions": [
    "activeTab"
  ],
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
      "matches": ["https://github.com/*"],
      "js": [
        "constants.js",
        "utils.js",
        "path.js",
        "request.js",
        "github.js",
        "github/tree_path.js",
        "github/pull_path.js",
        "crossdart/pull.js",
        "crossdart/tree.js",
        "location_change_detector.js",
        "crossdart.js"
      ],
      "css": ["crossdart.css"]
  }]
}
